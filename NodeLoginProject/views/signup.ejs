<!DOCTYPE html>
<html>
  <head>
    <title>Signup</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/3.1.2/rollups/sha256.js"></script>
    <script>
    $(document).ready(function(){
        $('#loginbtn').click(function(){
            $.ajax({
                url: '/signupusr',
                type: 'put',
                data: {
                    ema : $('#emaf').val()+'@'+$('#emas').val(), 
                    nick: $('#nickname').val(), 
                    pwd : CryptoJS.SHA256($('#usrpwd').val()).toString()
                },
                success: (data) => {
                	alert(data.email+','+data.nickname+','+data.password);
                }
            });
        });
    });
    </script>
  </head>
  <body>
    <label for="emaf">Email :&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
    <input id="emaf"></input>
    <label for="emas">@</label>
    <input id="emas"></input><br />
    <label for="nickname">Nickname : </label>
    <input id="nickname"></input><br />
    <label for="password">Password : </label>
    <input type="password" id="usrpwd"></input><br />
    <button id="loginbtn">Sign up</button>
  </body>
</html>